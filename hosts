# Each host needs to be in DNS or explicitly defined in
# your local /etc/hosts file

devsrv  ansible_ssh_user=root ansible_ssh_private_key_file=/home/oss/automation/keys/id_rsa

[linode-webservers]
srv1 ansible_ssh_port=1001 ansible_ssh_user=cmills ansible_ssh_private_key_file=~/.ssh/id_rsa ansible_sudo=yes
srv2 ansible_ssh_port=1001 ansible_ssh_user=cmills ansible_ssh_private_key_file=~/.ssh/id_rsa ansible_sudo=yes

[scaleway-webservers]
srv3	ansible_ssh_port=22 ansible_ssh_user=root
srv4	ansible_ssh_port=22 ansible_ssh_user=root

[digitalocean-webservers]
websrv001  ansible_ssh_user=root ansible_ssh_private_key_file=/home/oss/automation/keys/id_rsa
websrv002  ansible_ssh_user=root ansible_ssh_private_key_file=/home/oss/automation/keys/id_rsa

[oss]
srv1	ansible_ssh_port=1001 ansible_ssh_user=cmills ansible_ssh_private_key_file=~/.ssh/id_rsa ansible_sudo=yes
srv2	ansible_ssh_port=1001 ansible_ssh_user=cmills ansible_ssh_private_key_file=~/.ssh/id_rsa ansible_sudo=yes
srv3	ansible_ssh_port=22 ansible_ssh_user=root

[www]
websrv001  ansible_ssh_user=root ansible_ssh_private_key_file=/home/oss/automation/keys/id_rsa
